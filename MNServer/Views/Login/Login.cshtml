@model MNServer.Models.Tbl_UserMaster
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Scripts/Test.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
    <div class="text-center form-group Heading" style="padding:20px;">Login Form</div>
    <div class="form-horizontal" style="margin-bottom:15px;">

<div class="panel panel-body panel-heading col-md-5" style=" border: 2px groove #ddd !important; border-radius: 7px ; margin-left:28%;">

            @using (Html.BeginForm(FormMethod.Post))
            {

                @Html.ValidationSummary(true)

                <fieldset>
                    <div class="ValidateLable">
                        <p>@ViewBag.MyString</p>
                    </div>
               
                    @*UserName*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
            
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*Password*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                       
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-success" />
                            <input type="Reset" value="Reset" class="btn btn-primary" />

                            @Html.ActionLink("New Registration", "Registration")
                        </div>


                    </div>

                </fieldset>
            }

            <div>

                <h5 style="color:red">@TempData["Responce"]</h5>

            </div>
        </div>
    </div>
</body>

</html>


